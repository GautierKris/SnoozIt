<div class="img">

    {% if userFollow %}
        {% set followed = 'thumbnail-followed' %}
        {% else %}
            {% set followed = '' %}
    {% endif %}
    {#<i class="fa fa-plus fa-2x befriend"></i>#}

    <img src="{{ asset('uploads/avatar/'~advert.user.avatar) }}" alt="{{ advert.user.username }}" class="img-responsive img-thumbnail {{ followed }}">

</div>
<p>{{ advert.user.username }}</p>
<p><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></p>
<p class="help-block"> (330 Votes)</p>
<div class="btn-group-sm">
    {% if is_granted('IS_AUTHENTICATED_REMEMBERED')%}
        {% if app.user.id != advert.user.userId %}

            {% if not userFollow %}
                <a class="btn btn-success btn-success btn-block " href="{{ path('snoozit_follow_user', {'id' : advert.user.userId}) }}">S'abonner</a>
                {% else %}
                    <a class="btn btn-success btn-success btn-block" href="{{ path('snoozit_follow_user', {'id' : advert.user.userId}) }}">Abonn√©</a>
            {% endif %}

        {% else %}
            <a class="btn btn-primary btn-block " href="{{ path('fos_user_profile_show_name', {'username' : advert.user.username}) }}">Mes Annonces</a>
        {% endif %}
    {% else %}
        <a class="btn btn-success btn-success btn-block" href="{{ path('fos_user_security_login') }}">Suivre</a>
        <a class="btn btn-primary btn-block " href="{{ path('fos_user_profile_show_name', {'username' : advert.user.username}) }}">Ses Annonces</a>
    {% endif %}
    <a class="btn btn-info btn-block " href="{{ path('fos_user_profile_show_name', {'username' : advert.user.username}) }}">Profile</a>
</div>