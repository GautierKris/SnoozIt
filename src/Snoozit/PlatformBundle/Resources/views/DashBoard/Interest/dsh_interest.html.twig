{% if advertList is not empty %}
    <div class="well well-sm">
        <h4 class="text-bold">Vos activit√©s en cours</h4>
        <div class="userActivity-table">
            <table class="table table-condensed table-striped table-hover">
                <thead>
                <tr>
                    <th class="text-center col-xs-2">Date</th>
                    <th class="col-xs-8">Titre de l'annonce</th>
                    <th class="text-center col-xs-2">Status</th>
                </tr>
                </thead>
                <tbody>

                {% for u in advertList  %}
                    {% if loop.index is divisibleby(2) %}
                        {% set color = 'warning' %}
                        {% set text = 'En cours' %}
                       {% elseif loop.index is divisibleby(3) %}
                           {% set color = 'danger' %}
                           {% set text = 'Refuser' %}
                    {% else %}
                            {% set color = 'success' %}
                            {% set text = 'Vendu' %}
                    {% endif %}
                    <tr>
                        <th scope="row" class="text-center text-grey">{{ u.created|date('d/m') }}</th>
                        <td>{{ u.title|truncate(50) }}</td>
                        <td class="text-center"><a href="#" class="label label-{{ color }} ">{{ text }}</a></td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
            <a class="col-xs-12 text-center see-more" href="{{ path('snoozit_dashboard_console') }}">
              Voir tout
            </a>
            <div class="clearfix"></div>
        </div>
    </div>

{% endif %}
