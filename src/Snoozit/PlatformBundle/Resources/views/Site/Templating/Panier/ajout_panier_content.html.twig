<div class="row" >
    {% if advertListToPropose %}
    <div class="sponsoredTopMedia col-xs-12">
        <h3 class="text-bold">Ca pourrait le faire aussi : </h3>
        <ul class="list-inline">
            {% for a in advertListToPropose %}
            <li class="list-group-item col-md-4">
                <div class="row">
                    <div class="col-xs-3 divNoPadding-right">
                        {% if a.picture_path is not null %}
                            <img src="{{ asset('uploads/annonce/'~a.picture_path) }}" alt="..." class="img-responsive">
                        {% else %}
                            <img src="{{ asset('bundles/snoozitplatform/images/no-image-annonce.png') }}" alt="..." class="img-responsive">
                        {% endif %}
                    </div>
                    <div class="col-xs-9">
                        <h4 class="text-bold text-grey">{{ a.title|truncate(90) }}</h4>
                        <p><a href="{{ path('fos_user_profile_show_name',{'username': a.username}) }}">{{ a.username }}</a>
                                <span class="text-star">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star-half-o"></i>
                                    <i class="fa fa-star-half-empty"></i>
                                </span>
                        </p>
                        <p>
                            <a href="{{ path('snoozit_platform_show_by_region', {'slug' : a.regionSlug}) }}">{{ a.regionName }}</a> -
                            <a href="{{ path('snoozit_platform_show_by_departement', {'slug' : a.regionSlug}) }}">{{ a.departementName }}</a> -
                            <a href="{{ path('snoozit_platform_show_by_city', {'slug' : a.city_slug}) }}">{{ a.city }}</a>
                        </p>
                        <p class="text-bold">Tarif: {{ a.price }} €</p>
                    </div>
                </div>
            </li>
            {% endfor %}
        </ul>
    </div>
    {% endif %}

    <div class="col-md-8 col-md-offset-2">
        <div id="addPanier">

            <div class="top text-center">

                <div class="row">
                    <div class="col-xs-12 checked text-success">
                        <i class="fa fa-check"></i>
                        <span >Annonce ajoutée !</span>
                        <p>Le vendeur à aussitot été prévenu</p>
                    </div>
                    <div class="col-xs-12 ">
                    </div>
                </div>

                <div class="row content">
                    <div class="col-xs-8 col-xs-offset-2">
                        <div class="col-xs-3">
                            {% if advert.pictureOne is not null %}
                                <img src="{{ asset('uploads/annonce/'~advert.pictureOne.path) }}" alt="..." class="img-responsive">
                            {% else %}
                                <img src="{{ asset('bundles/snoozitplatform/images/no-image-annonce.png') }}" alt="..."
                                     class="img-responsive">
                            {% endif %}
                        </div>
                        <div class="col-xs-9 text-left">
                            <h3><a href="{{ path('snoozit_show_advert', {'id': advert.id, 'slug' : advert.slug }) }}"  class="text-bold text-grey">{{ advert.title }}</a></h3>
                            <p><a href="{{ path('fos_user_profile_show_name',{'username': advert.user.username}) }}">{{ advert.user.username }}</a>
                                <span class="text-star">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star-half-o"></i>
                                    <i class="fa fa-star-half-empty"></i>
                                </span>
                            </p>
                            <p>
                                <a href="{{ path('snoozit_platform_show_by_region', {'slug' : advert.city.departement.region.slug}) }}">{{ advert.city.departement.region.nom }}</a> -
                                <a href="{{ path('snoozit_platform_show_by_departement', {'slug' : advert.city.departement.slug}) }}">{{ advert.city.departement.nom }}</a> -
                                <a href="{{ path('snoozit_platform_show_by_city', {'slug' : advert.city.slug}) }}">{{ advert.city.nom }}</a>
                            </p>
                            <p class="text-bold">Tarif: {{ advert.price }} €</p>
                        </div>
                        <div class="clearfix"></div>
                    </div>

                </div>

            </div>



            <div class="bottom">
                <div class="row">
                    <div class="col-xs-4 col-xs-offset-2">
                        {% if referer %}
                            <a href="{{ referer }}" class="btn btn-default btn-block" target="_self">Continuer mes achats</a>
                            {% else %}
                                <a href="{{ path('snoozit_dashboard_homepage') }}" class="btn btn-default btn-block">Continuer mes achats</a>
                        {% endif %}
                    </div>
                    <div class="col-xs-4">
                        <a href="{{ path('snoozit_platform_panier_homepage') }}" class="btn btn-success btn-block">Mon panier</a>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>
